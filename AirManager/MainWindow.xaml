<fluent:RibbonWindow x:Uid="fluent:RibbonWindow_1" x:Class="AirManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:infrastructure="clr-namespace:AirManager.Infrastructure;assembly=AirManager.Infrastructure"
        xmlns:fluent="urn:fluent-ribbon"
        Title="Air Manager" Height="850" Width="1050" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="Resources/Icons/plane.ico">
    <Grid x:Uid="Grid_1">
        <fluent:Ribbon x:Uid="fluent:Ribbon_1" prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.RibbonRegion}">
            <fluent:Ribbon.Menu>
                <fluent:Backstage x:Uid="fluent:Backstage_1">
                    <fluent:Button x:Uid="fluent:Button_1" Header="Exit" />
                </fluent:Backstage>
            </fluent:Ribbon.Menu>
        </fluent:Ribbon>
        <ContentControl x:Uid="ContentControl_1" prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MainRegion}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
    </Grid>
</fluent:RibbonWindow>
