<fluent:RibbonWindow x:Class="AirManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:infrastructure="clr-namespace:AirManager.Infrastructure;assembly=AirManager.Infrastructure"
        xmlns:fluent="urn:fluent-ribbon"
        Title="Air Manager" Height="850" Width="1050" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="Resources/Icons/plane.ico">
    <Grid>
        <fluent:Ribbon prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.RibbonRegion}">
            <fluent:Ribbon.Menu>
                <fluent:Backstage>
                    <fluent:Button Header="Exit" />
                </fluent:Backstage>
            </fluent:Ribbon.Menu>
        </fluent:Ribbon>
        <ContentControl prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MainRegion}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
    </Grid>
</fluent:RibbonWindow>
