<fluent:RibbonTabItem x:Class="AirManager.Airlines.Views.AirlineTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fluent="urn:fluent-ribbon"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:viewModels="clr-namespace:AirManager.Airlines.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:AirlineTabViewModel}"
             d:DesignHeight="300" d:DesignWidth="358" Header="Airline">
    <fluent:RibbonGroupBox Header="Planes">
        <fluent:Button Header="{lex:Loc AirManager:Resources:AirlineBuyAirplane}" LargeIcon="pack://application:,,,/AirManager.Airlines;component/Resources/Icons/newplane.png" Icon="pack://application:,,,/AirManager.Airlines;component/Resources/Icons/newplane.png" />
        <fluent:Button Header="{lex:Loc AirManager:Resources:AirlineTabUpdateDb}" Command="{Binding UpdateDbCommand}" />
    </fluent:RibbonGroupBox>
</fluent:RibbonTabItem>
